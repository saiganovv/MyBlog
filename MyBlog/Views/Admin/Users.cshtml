@model IEnumerable<MyBlog.Models.UserProfile>

@{
    ViewBag.Title = "Users";
}

<p>
    @Html.ActionLink("Create New", "Create", "AdminUsers", null, new { @class = "btn btn-success" })
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>Role
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Roles.GetRolesForUser(@item.UserName)[0]
            </td>
            <td>
                <div class="btn-group">
                    @Html.ActionLink("Edit", "Edit", "AdminUsers", new { id = item.UserId }, new { @class = "btn" })
                    @Html.ActionLink("Details", "Details", "AdminUsers", new { id = item.UserId }, new { @class = "btn" })
                    @Html.ActionLink("Delete", "Delete", "AdminUsers", new { id = item.UserId }, new { @class = "btn" })
                </div>
            </td>
        </tr>
    }

</table>
