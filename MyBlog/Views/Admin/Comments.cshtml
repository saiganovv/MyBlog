@model IEnumerable<MyBlog.Models.CommentModel>

@{
    ViewBag.Title = "Comments";
}

<p>
    @Html.ActionLink("Create New", "Create", "AdminComments", null, new { @class = "btn btn-success" })
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Post)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName.UserName)
            </td>
            <td>
                <div class="btn-group">
                    @Html.ActionLink("Edit", "Edit", "AdminComments", new { id = item.Id }, new { @class = "btn" })
                    @Html.ActionLink("Delete", "Delete", "AdminComments", new { id = item.Id }, new { @class = "btn" })
                </div>
            </td>
        </tr>
    }

</table>
